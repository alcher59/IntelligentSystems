        <Button x:Name="btn1" Content="Мясо в миске" HorizontalAlignment="Left" Margin="100,84,0,0" VerticalAlignment="Top" Width="99" Grid.ColumnSpan="2" Click="btn1_Click" BorderBrush="#FF707070" Background="White"/>
